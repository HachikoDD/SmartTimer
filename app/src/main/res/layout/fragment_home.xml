<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:design="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.co2017gmail.bilibili.smarttimer.home_screen">

    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BottomNavigation"
        android:layout_gravity="bottom"
        design:menu="@menu/menu_bottomnavigation"
        />


    <TextView
        android:id="@+id/tvDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:gravity="top"
        android:inputType="date"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:textAlignment="center" />

    <!--Time Left-->
    <LinearLayout
        android:id="@+id/linear_timeleft"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="100dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sand_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="15dp"
                android:layout_weight="0.29"
                design:srcCompat="@mipmap/ic_launcher" />
        </RelativeLayout>

        <!--3 time units-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!--Hour-->
            <LinearLayout
                android:id="@+id/hour_horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timer_hour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"
                    android:layout_gravity="top"
                    android:ems="10"
                    android:text="1" />

                <TextView
                    android:id="@+id/tvtimerhour"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:layout_gravity="top"
                    android:text="hour" />
            </LinearLayout>

            <!--Minute-->
            <LinearLayout
                android:id="@+id/minute_horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timer_minute"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"

                    android:ems="10"
                    android:text="1" />

                <TextView
                    android:id="@+id/tvtimerminute"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="minute" />
            </LinearLayout>

            <!--Second-->
            <LinearLayout
                android:id="@+id/second_horizontal"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginTop="60dp"
                android:layout_alignParentStart="true"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_timer_second"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAlignment="center"

                    android:ems="10"
                    android:text="1" />

                <TextView
                    android:id="@+id/tvtimersecond"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:text="second" />
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvEvent"
            android:text="Out of time!"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:id="@+id/container"
        android:layout_height="246dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="200dp"
        tools:context="com.example.android.appusagestatistics.AppUsageStatisticsActivity"
        tools:ignore="MergeRootFrame">

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/margin_medium">

        <LinearLayout android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_span"
                />

            <Spinner android:id="@+id/spinner_time_span"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerview_app_usage"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_marginRight="@dimen/margin_small"
            android:scrollbars="vertical"
            android:drawSelectorOnTop="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        </LinearLayout>

    </FrameLayout>

</android.support.design.widget.CoordinatorLayout>
